<div class="exchange_box">
  <div class="card">
    <div class="card-header text-center">
      Simule sua convers√£o
    </div>
    <div class="card-block">
      <%= form_tag("/exchange", method: "post", id: "exchange_form") do %>
        <div class="form-group">
          <p class="title">Valor</p>
          <input type="number" name="quantity" id="quantity" class="form-control"step="any" required value=1>
        </div>
        <div class="d-none d-sm-block d-md-block d-lg-block d-xl-block">
          <div class="row">
            <div class="col-12 col-sm-7 col-md-7">
              <p class="title">Da moeda</p>
            </div>
            <div class="col-12 col-sm-5 col-md-5">
              <p class="title">Para moeda</p>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-12 col-sm-5">
            <div class="form-group">
              <%= select_tag "currency", options_for_select(currency_select, "BRL"), class: "form-control", id: "currency" %>
            </div>
          </div>
          <div class="col-12 col-sm-2">
            <div class="form-group">
              <div class="d-flex justify-content-center">
                <div class="d-none d-sm-block d-md-block d-lg-block d-xl-block">
                  <button type="button" class="btn btn-outline-dark btn-invert-currency"><%= image_tag 'ic_compare_arrows_black_18px.svg' %></button>
                </div>
                <div class="d-sm-none d-md-none d-lg-none d-xl-none">
                  <button type="button" class="btn btn-outline-dark btn-invert-currency"><%= image_tag 'ic_swap_vert_black_18px.svg' %></button>
                </div>
              </div>
            </div>
          </div>
          <div class="col-12 col-sm-5">
            <div class="form-group">
              <%= select_tag "currency_destination", options_for_select(currency_select, "EUR"), class: "form-control", id: "currency_destination"%>
            </div>
          </div>
        </div>
        <div class="destination_currency">
          <div class="form-group">
            <input type="text" id="result" name="result" class="form-control" placeholder="Resultado" readonly>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>